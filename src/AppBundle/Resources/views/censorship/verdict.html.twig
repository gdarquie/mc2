    <script>
        function sortPerso(element, col) {

            if (element.dataset.cpt%2 == 0) {
                FilmList.sort(col, {order : "asc"});
                element.dataset.cpt++;
            } else {
                FilmList.sort(col, {order : "desc"});
                element.dataset.cpt++;
            }
        }
