    <script>

        {% if filmsByVerdict|length < 16 %}

        var options = {
            valueNames: ['list_film', 'list_release_date', 'list_studio']
        };

        {% endif %}


        {% if filmsByVerdict|length > 15 %}

        var options = {
            valueNames: ['list_film', 'list_release_date', 'list_studio']
        };

        {% endif %}

        var FilmList = new List('table_one_verdict', options);

